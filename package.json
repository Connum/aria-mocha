{
  "name": "aria-mocha",
  "version": "0.2.2",
  "description": "Simple Testing for your nodejs",
  "main": "aria-mocha.js",
  "bin": {
    "aria-mocha": "./bin/aria-mocha.js"
  },
  "scripts": {
    "help": "node ./bin/aria-mocha.js --help",
    "build": "aria-build -d --external aria-fs,aria-mocha-headless,assert,mocha,istanbul-api,istanbul-lib-hook,istanbul-lib-instrument,istanbul-lib-coverage",
    "test": "node ./bin/aria-mocha.js --dir examples --check-coverage --threshold statements=50,functions=50,branches=50,lines=50"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/aria-mocha.git"
  },
  "keywords": [
    "test",
    "mocha",
    "coverage",
    "istanbul"
  ],
  "author": "Arjay Elbore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aelbore/aria-mocha/issues"
  },
  "homepage": "https://github.com/aelbore/aria-mocha#readme",
  "peerDependencies": {
    "aria-fs": ">= ^0.2.2",
    "aria-build": ">= ^0.2.2",
    "aria-mocha-headless": ">= ^0.2.2"
  },
  "dependencies": {
    "istanbul-api": "^2.1.6",
    "chai": "^4.2.0",
    "mocha": "^7.1.0",
    "sade": "^1.7.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/istanbul": "^0.4.30",
    "@types/istanbul-lib-hook": "^2.0.0",
    "@types/istanbul-lib-instrument": "^1.7.3",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/mocha": "^7.0.1",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^13.7.7",
    "@types/puppeteer": "^2.0.1",
    "@types/sinon": "^7.5.2",
    "mock-fs": "^4.11.0",
    "sinon": "^9.0.0",
    "typescript": "^3.8.2"
  }
}
