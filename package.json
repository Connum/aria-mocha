{
  "name": "aria-mocha",
  "version": "0.3.0",
  "description": "Simple Testing for your nodejs",
  "main": "aria-mocha.js",
  "module": "aria-mocha.es.js",
  "bin": {
    "aria-mocha": "./bin/aria-mocha.js"
  },
  "scripts": {
    "help": "node ./bin/aria-mocha.js --help",
    "pretest": "ts-node --project ./tools/tsconfig.json ./tools/pre-test.ts",
    "build": "aria-build -d --esbuild --external assert,istanbul-lib-hook,istanbul-lib-instrument,istanbul-lib-coverage",
    "test": "node ./bin/aria-mocha.js --file ./tmp --include-dir ./tmp --check-coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/aria-mocha.git"
  },
  "keywords": [
    "test",
    "mocha",
    "coverage",
    "istanbul"
  ],
  "author": "Arjay Elbore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aelbore/aria-mocha/issues"
  },
  "homepage": "https://github.com/aelbore/aria-mocha#readme",
  "peerDependencies": {
    "aria-build": ">= ^0.3.0",
    "aria-fs": ">= ^0.3.0",
    "aria-mocha-headless": ">= ^0.3.0"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "istanbul-api": "^3.0.0",
    "mocha": "^7.1.2",
    "sade": "^1.7.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/istanbul": "^0.4.30",
    "@types/istanbul-lib-hook": "^2.0.1",
    "@types/istanbul-lib-instrument": "^1.7.4",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/mocha": "^7.0.2",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.0.1",
    "@types/puppeteer": "^2.1.0",
    "@types/sinon": "^9.0.1",
    "coveralls": "^3.1.0",
    "mock-fs": "^4.12.0",
    "mock-require": "^3.0.3",
    "sinon": "^9.0.2",
    "typescript": "^3.9.2"
  }
}
