{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "esNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib" :[
      "dom",
      "es2015",
      "es2017",
      "es2018",
      "es2019"
    ],
    "allowJs": true
  }
}